            <div class="row " >
                <!-- Image Produit -->
                <div class="col-sm-6 .col-md-6 container">
                    <img class="img-thumbnail rounded-3 mt-5" src="{{ asset('image/produits/' ~ produit.image ) }}" title="{{produit.nom}}" width="" height="600px"/>
                </div>
                <!-- Titre + Description -->
                <div class="col-sm-6 .col-md-6">                   
                      <h2 class="warning  bord mb-3">{{produit.nom}}</h2>                 
                    <div class="description black bord px-2">
                        <h3>Description</h3>
                        <p>{{produit.description}}</p>
                    </div>>
                    <!-- Note + Commentaire-->
                    <div class="success bord px-3 pt-3">
                        <div class="row container mb-2">
